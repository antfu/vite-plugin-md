{
  "name": "happy-wrapper",
  "version": "0.1.0",
  "description": "A wrapper around the HappyDOM which makes it more functional in signature and provides some helpful utilities beyond the DOM implementation",
  "license": "ISC",
  "author": "Ken Snyder <ken@ken.net>",
  "main": "dist/index.js",
  "module": "dist/main.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --sourcemap external",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "watch": "tsup src/index.ts --format cjs,esm --dts --sourcemap external --watch"
  },
  "dependencies": {
    "callsites": "^3.1.0",
    "fp-ts": "^2.12.1",
    "happy-dom": "^3.2.0",
    "tsup": "^5.12.7"
  },
  "devDependencies": {
    "@vitest/ui": "^0.12.4",
    "vitest": "^0.12.4"
  }
}
