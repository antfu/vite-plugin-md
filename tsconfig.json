{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~/fixtures/*": [
        "test/fixtures/*"
      ],
      "~/utils/*": [
        "test/utils/*"
      ]
    }
  },
  "include": [
    "src",
    "test",
    "vite.config.ts"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}
